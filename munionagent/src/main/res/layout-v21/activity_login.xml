<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_munion_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="3"
        android:contentDescription="@string/iv_munion_logo_description"
        android:scaleType="center"
        android:src="@mipmap/ic_logo3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_head_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/auth_head_text"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            app:minTextSize="16sp"
            android:maxLines="2" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/radius_edit_text"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/auth_edit_hint_email"
            android:inputType="textEmailAddress"
            android:paddingBottom="16dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint"
            android:drawableStart="@drawable/ic_email_white" />

        <EditText
            android:id="@+id/edit_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/radius_edit_text"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/auth_edit_hint_pass"
            android:inputType="textPassword"
            android:paddingBottom="16dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint"
            android:drawableStart="@drawable/ic_lock_white" />

        <com.marcouberti.autofitbutton.AutoFitButton
            android:id="@+id/auth_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_btn_height"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/radius_button"
            android:text="@string/auth_btn_text"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:singleLine="true" />

    </LinearLayout>

</LinearLayout>